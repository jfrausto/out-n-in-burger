<header class="container my-5">
    <div class="row">
        <div class="col-12 text-center">
            {{!-- burger <img> --}}
            <h1>Out n In Burger!</h1>
        </div>
    </div>
</header>
<main class="container mb-5">
    <div class="row">
        <div class="col-12 col-md-6 notDevoured mb-2">
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-12 col-md-6 devoured">
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                {{!-- will probably not need to set devoured to false; --}}
                {{!-- we will not UN-eat the burger --}}
                {{> burgers/burger-block devour=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</main>
<footer class="container mt-3">
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 text-center">
            <form id="sendNewBurger">
                <div class="form-group">
                    <label for="burgerTextArea">new burger?</label>
                    <textarea type="text-area" class="form-control" id="burgerTextArea" rows="3"></textarea>
                </div>
                <button type="submit">SUBMIT</button>
            </form>
        </div>

    </div>
</footer>