{{!-- split index into three containers --}}
{{!-- title and image --}}
<header class="container mt-3 mb-2">
    <div class="row">
        <div class="col-12 text-center">
            {{!-- burger <img> --}}
            <h1>Out-n-In Burger!</h1>
            <img src="/assets/img/burger-vector.png" alt="High Def Burger!" class="mt-3" id="burgerPng">
        </div>
    </div>
</header>
{{!-- main content area displays two columns of burgers --}}
<main class="container mb-3 mt-4">
    <div class="row">
        <div class="col-12 col-md-6 mb-2 text-center">
            <h2><u>out</u></h2>
            <ul class="list-group border border-dark rounded notDevoured">
                {{#each burgers}}
                {{#unless devoured}}
                {{!-- 'unless' is the opposite of 'if' --}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-12 col-md-6 text-center">
            <h2><u>in</u></h2>
            <ul class="list-group border border-dark rounded devoured">
                {{#each burgers}}
                {{#if devoured}}
                {{!-- go into burger-block to render devoured --}}
                {{> burgers/burger-block devour=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</main>

{{!-- submit new burger --}}
<footer class=" container mt-4">
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 text-center">
            <form id="sendNewBurger">
                <div class="form-group">
                    <label for="burgerTextArea"> <span class="border border-dark rounded p-1">new
                            burger?</span></label>
                    <textarea type="text-area" class="form-control mt-1 border border-dark" id="burgerTextArea"
                        rows="3"></textarea>
                </div>
                <button type="submit">SUBMIT</button>
            </form>
        </div>

    </div>
</footer>